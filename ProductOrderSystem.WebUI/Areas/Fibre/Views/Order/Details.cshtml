@model ProductOrderSystem.Domain.Fibre.Models.Order

@using ProductOrderSystem.WebUI.Helpers

@{
    ViewBag.Title = "Order Details";
}

<h2>Order Details</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        @ViewBag.ErrorMessage
    </div>
}

<div ng-controller="DetailsCtrl">
    <form id="form" name="form" class="form-horizontal">
        <fieldset>
            @{ Html.RenderPartial("_DetailsSC", Model); }
            @{ Html.RenderPartial("_DetailsCC", Model); }
            @{ Html.RenderPartial("_DetailsFL", Model); }
            @{ Html.RenderPartial("_DetailsAC", Model); }
            @{ Html.RenderPartial("_DetailsInstall", Model); }
        </fieldset>
    </form>
</div>

<script src="~/Areas/Fibre/js/order/details.js"></script>